<%= turbo_frame_tag dom_id(@seat) do %>
  <%= form_with model: seat, url: url, method: 'patch', data: {controller: 'seat-edit-form'}, class: 'relative' do |f| %>
    <%= link_to close_admin_seat_path(seat), data: {turbo_method: :post}, class: 'text-red-500 hover:text-red-700 absolute right-2 top-1 text-lg' do%>
      <i class="fa-solid fa-xmark"></i>
    <% end %>
    <div class='flex items-center justify-between gap-4 p-2 rounded bg-bgGray'>
      <div>
        <%= f.text_field :title, class: 'w-full mb-2 border-none rounded h-8', placeholder: 'Title', required: true, data: {seat_edit_form_target: 'title', action: 'input->seat-edit-form#setSubmit'} %>
        <%= f.number_field :capacity, class: 'w-full border-none rounded h-8' , placeholder: 'Capacity', min: 1, required: true, data: {seat_edit_form_target: 'capacity', action: 'input->seat-edit-form#setSubmit'} %>
      </div>
      <div>
        <%= f.button class: 'major-button hidden', data: {seat_edit_form_target: 'submit'} do %>
          <i class="fa-solid fa-pen"></i>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
