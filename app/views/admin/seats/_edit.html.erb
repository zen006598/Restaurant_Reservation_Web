<%= turbo_frame_tag dom_id(@seat) do %>
  <%= form_with model: seat, url: url, method: 'patch', data: {controller: 'seat-form'}, class: 'relative' do |f| %>
    <%= link_to close_admin_seat_path(seat), data: {turbo_method: :post}, class: 'text-red-500 hover:text-red-700 absolute left-2 top-1 text-lg' do%>
      <i class="fa-solid fa-xmark"></i>
    <% end %>
    <div class='flex gap-4 p-2 rounded bg-bgGray'>
      <div>
        <div class='flex w-10/12 gap-2 mb-2 ml-auto'>
          <%= f.text_field :title, class: 'w-full  border-none rounded h-8', placeholder: 'Title', required: true, data: {seat_form_target: 'title', action: 'input->seat-form#setSubmit'} %>
        </div>
        
        <%= f.select :table_type, Seat.table_types.keys, {}, class: 'w-full border-none rounded bg-white mb-2 h-8 text-md p-0 px-2' %>

        <div class='flex gap-2 mb-2'>
          <%= f.number_field :capacity, class: 'w-2/5  border-none rounded h-8' , placeholder: 'Capacity', min: 1, required: true, data: {seat_form_target: 'capacity', action: 'input->seat-form#setSubmit'} %>
          <%= f.number_field :deposit,  class: 'w-3/5 border-none rounded h-8', placeholder: 'Deposit', min: 0 %>
        </div>

        <%= f.button class: 'major-button hidden h-8 w-full', data: {seat_form_target: 'submit'} do %>
          <i class="fa-solid fa-pen"></i>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
